!> Build environment configuration (generated by CMake)
!> This module provides absolute paths to the source and build directories
!> for reliable file I/O in tests.
module build_env
  implicit none
  private

  public :: source_dir, build_dir, build_env_init

  !> Absolute path to the project source directory
  character(len=*), parameter :: source_dir = "@PROJECT_SOURCE_DIR@"

  !> Absolute path to the project build directory
  character(len=*), parameter :: build_dir = "@PROJECT_BINARY_DIR@"

contains

  !> No-op for CMake builds (paths are compile-time constants)
  subroutine build_env_init()
  end subroutine build_env_init

end module build_env
